<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/logo_hitam"
        android:layout_margin="15dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="19dp">
        <ImageView
            android:id="@+id/goMart"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/menu_gomart"
            android:layout_margin="5dp">

        </ImageView>
        <ImageView
            android:id="@+id/goRide"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/menu_goride"
            android:layout_margin="5dp">

        </ImageView>
        <ImageView
            android:id="@+id/goFood"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/menu_gofood"
            android:layout_margin="5dp">

        </ImageView>
        <ImageView
            android:id="@+id/goSend"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/menu_gosend"
            android:layout_margin="5dp">

        </ImageView>
    </GridLayout>
</RelativeLayout>